{
  "name": "releaseapp",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/danielhusar/releaseapp",
  "author": "Daniel Husar <daniel.husar@gmail.com>",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "NODE_ENV=production next",
    "start:test": "NODE_ENV=test next",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "format": "prettier --ignore-path .gitignore --write '**/*.{ts,tsx,js,json,css,md}'",
    "test:format": "prettier --ignore-path .gitignore -l '**/*.{ts,tsx,js,json,css,md}'",
    "test:lint": "eslint --ignore-path .gitignore --ext .ts,.tsx .",
    "test:types": "tsc",
    "test:unit": "jest",
    "test:e2e": "yarn build && start-test start:test 3000 cypress:run"
  },
  "dependencies": {
    "@chakra-ui/core": "^0.8.0",
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "emotion-theming": "^10.0.27",
    "next": "^9.4.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@testing-library/jest-dom": "^5.10.0",
    "@testing-library/react": "^10.2.1",
    "@types/node": "^14.0.13",
    "@types/react": "^16.9.36",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "babel-plugin-emotion": "^10.0.33",
    "cypress": "^4.8.0",
    "cypress-file-upload": "^4.0.7",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-flowtype": "^5.1.3",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-emotion": "^10.0.32",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jsdom": "^16.2.2",
    "lint-staged": "^10.2.9",
    "prettier": "^2.0.5",
    "start-server-and-test": "^1.11.0",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5",
    "typescript-styled-plugin": "^0.15.0"
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      "emotion"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "name": "app",
    "testURL": "http://localhost/",
    "preset": "ts-jest",
    "moduleNameMapper": {
      "~(.*)$": "<rootDir>/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/setup-test.ts"
    ],
    "snapshotSerializers": [
      "jest-emotion"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts?(x)"
    ],
    "testEnvironment": "jest-environment-jsdom-sixteen",
    "transform": {
      "^.+\\.tsx?$": "babel-jest"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false
  }
}
